<h4 class="ui center aligned medium icon header">
  <i class="yellow users icon"></i>
  Say something to your friends
</h4>

<div class="ui two column grid">
  <!-- Chat box -->
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui feed">
          <%= render @messages %>
        </div>
      </div>
      <div class="extra content">
        <form class="ui reply form">
          <div class="field">
            <div class="ui fluid icon input">
              <input type="text" placeholder="Type messages..." autofocus>
              <i class="bordered inverted yellow edit icon"></i>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  <!-- End chat box -->

  <!-- Side bar menu -->
  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a class="item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
  <!-- End side bar menu  -->
</div>
